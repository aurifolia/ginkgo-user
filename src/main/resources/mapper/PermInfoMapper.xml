<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.aurifolia.cloud.ginkgo.user.repository.PermInfoMapper">

    <resultMap id="BaseResultMap" type="org.aurifolia.cloud.ginkgo.user.entity.PermInfo">
        <id column="id" property="id"/>
        <result column="perm_name" property="permName"/>
        <result column="perm_desc" property="permDesc"/>
        <result column="deleted" property="deleted"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, perm_name, perm_desc, deleted, create_time, update_time
    </sql>

    <insert id="insert" parameterType="org.aurifolia.cloud.ginkgo.user.entity.PermInfo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO perm_info (perm_name, perm_desc, deleted, create_time, update_time)
        VALUES (#{permName}, #{permDesc}, #{deleted}, #{createTime}, #{updateTime})
    </insert>

    <update id="updateById" parameterType="org.aurifolia.cloud.ginkgo.user.entity.PermInfo">
        UPDATE perm_info
        <set>
            <if test="permName != null and permName != ''">
                perm_name = #{permName},
            </if>
            <if test="permDesc != null">
                perm_desc = #{permDesc},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <select id="selectById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM perm_info
        WHERE id = #{id} AND deleted = 0
    </select>

    <select id="selectByPermName" parameterType="string" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM perm_info
        WHERE perm_name = #{permName} AND deleted = 0
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM perm_info
        WHERE deleted = 0
    </select>

    <update id="deleteById" parameterType="long">
        UPDATE perm_info
        SET deleted = 1
        WHERE id = #{id}
    </update>

</mapper>