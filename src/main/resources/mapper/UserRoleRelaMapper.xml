<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.aurifolia.cloud.ginkgo.user.repository.UserRoleRelaMapper">

    <resultMap id="BaseResultMap" type="org.aurifolia.cloud.ginkgo.user.entity.UserRoleRela">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="role_id" property="roleId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, role_id, create_time
    </sql>

    <insert id="insert" parameterType="org.aurifolia.cloud.ginkgo.user.entity.UserRoleRela" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_role_rela (user_id, role_id, create_time)
        VALUES (#{userId}, #{roleId}, #{createTime})
    </insert>

    <select id="selectByUserIdAndRoleId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_role_rela
        WHERE user_id = #{userId} AND role_id = #{roleId}
    </select>

    <select id="selectByUserId" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_role_rela
        WHERE user_id = #{userId}
    </select>

    <select id="selectByRoleId" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_role_rela
        WHERE role_id = #{roleId}
    </select>

    <delete id="deleteByUserIdAndRoleId">
        DELETE FROM user_role_rela
        WHERE user_id = #{userId} AND role_id = #{roleId}
    </delete>

</mapper>