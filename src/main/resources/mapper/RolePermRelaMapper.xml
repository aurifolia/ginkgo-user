<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.aurifolia.cloud.ginkgo.user.repository.RolePermRelaMapper">

    <resultMap id="BaseResultMap" type="org.aurifolia.cloud.ginkgo.user.entity.RolePermRela">
        <id column="id" property="id"/>
        <result column="role_id" property="roleId"/>
        <result column="perm_id" property="permId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, role_id, perm_id, create_time
    </sql>

    <insert id="insert" parameterType="org.aurifolia.cloud.ginkgo.user.entity.RolePermRela" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role_perm_rela (role_id, perm_id, create_time)
        VALUES (#{roleId}, #{permId}, #{createTime})
    </insert>

    <select id="selectByRoleIdAndPermId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role_perm_rela
        WHERE role_id = #{roleId} AND perm_id = #{permId}
    </select>

    <select id="selectByRoleId" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role_perm_rela
        WHERE role_id = #{roleId}
    </select>

    <select id="selectByPermId" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role_perm_rela
        WHERE perm_id = #{permId}
    </select>

    <delete id="deleteByRoleIdAndPermId">
        DELETE FROM role_perm_rela
        WHERE role_id = #{roleId} AND perm_id = #{permId}
    </delete>

</mapper>